mixin header-block()
	// start header-block
	+b.header-block#header-block
		.container
			+e.IMG.img.res-i(src='img/@2x/header-img.png' alt='')
			+e.block
				h1 Мармеладные букеты
				+e.subtitle Вкусный подарок для человека, который Вам дорог

				+e.btn.btn.btn-primary.link-modal(href='#modal-order') Заказ
				+e.btn.btn.btn-primary.link-modal(href='#modal-deliver') Доставка
				+e.btn.btn.btn-primary.link-modal(href='#modal-thanks') Спасибо

				+e.soc-block
					+e.soc-info Подпишись на нас в социальных сетях:

					+e.A.soc-icon(href='#')
						+icon('inst')


	// end header-block